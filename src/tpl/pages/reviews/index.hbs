---
page_title:  <%= _.titleize(reviews) %>
page_scripts:
  dev:
    - //ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular.min.js
    - //ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular-resource.min.js
    - /js/reviews/factories.js
    - /js/reviews/controllers.js
    - /js/reviews/project.js
  dst:
    - //ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular.min.js
    - //ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular-resource.min.js
    - /js/reviews/factories.js
    - /js/reviews/controllers.js
    - /js/reviews/project.js
---
<h1>{{titleize reviews}}</h1>
<div ng-app="project">
    <div ng-controller="PlaceReviewsCtrl">
		<div ng-repeat="place in placeList" itemscope itemtype="http://schema.org/Place">
			<h3 ng-bind="place.name" itemprop="name"></h3>
			<h4 ng-bind="place.description" itemprop="description"></h4>
			<div ng-repeat="review in place.reviews" itemscope itemprop="review" itemtype="http://schema.org/Review">
				<b>Review</b>:<span ng-bind="review.reviewBody" itemprop="reviewBody"></span>
			</div>
		</div>
    </div>
</div>

